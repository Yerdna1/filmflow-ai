{
  "name": "filmflow-ai",
  "version": "1.0.0",
  "private": true,
  "description": "FilmFlow AI - Slovak Drama Scene Generator",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:seed-presets": "tsx prisma/seed-presets.ts",
    "db:setup": "prisma generate && prisma db push && npm run prisma:seed",
    "db:setup-full": "prisma generate && prisma db push && npm run prisma:seed && npm run prisma:seed-presets",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:components": "vitest run --dir tests/components",
    "test:api": "vitest run --dir tests/api",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.0.0",
    "@hookform/resolvers": "^3.3.4",
